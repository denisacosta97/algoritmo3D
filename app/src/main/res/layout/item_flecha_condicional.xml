<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_multiple_3d" />

            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/imgIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/colorBlue"
                android:src="@drawable/ic_conditional" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBSTÁCULO"
            android:fontFamily="@font/nyata"
            android:textSize="20sp" />

        <LinearLayout
            android:padding="5dp"
            android:gravity="right|center"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/colorBlue"
                android:src="@drawable/ic_derecha" />

            <TextView
                android:id="@+id/txtTitulo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIRAR IZQUIERDA"
                android:fontFamily="@font/nyata"
                android:textSize="18sp" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>