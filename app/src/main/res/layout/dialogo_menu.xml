<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/colorGrey"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/tvName"
            android:fontFamily="@font/nyata"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:text="DENIS ACOSTA" />

        <View
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:layout_width="320dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/tvFaculty"
            android:fontFamily="@font/nyata"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="FACULTAD DE CIENCIAS EXACTAS Y TECNOLOGÍAS" />

        <TextView
            android:id="@+id/tvCarrer"
            android:fontFamily="@font/nyata"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:text="LICENCIATURA EN SISTEMAS DE INFORMACIÓN" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNivel"
                android:fontFamily="@font/nyata"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="Nivel 1" />

            <ProgressBar
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"
                android:id="@+id/progres" />

            <TextView
                android:id="@+id/txtXP"
                android:fontFamily="@font/nyata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:text="120 / 1000 XP" />



        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="KM"
                        android:textSize="25sp"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/nyata"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtCountKM"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="234 KM"
                    android:fontFamily="@font/nyata"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_footprint"
                        app:tint="@color/colorWhite"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorWhite" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtCountPasos"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="105 P."
                    android:fontFamily="@font/nyata"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBlue"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="5dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        app:srcCompat="@drawable/ic_3d"
                        app:tint="@color/colorWhite"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorWhite" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtCountObj"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="10"
                    android:fontFamily="@font/nyata"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:text="Fecha de Registro"
                android:fontFamily="@font/nyata"/>

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:padding="5dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/colorBlue"
                    />

                <TextView
                    android:id="@+id/tvRegisteredDate"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Jueves 6 de Julio - 12:45:45"
                    android:fontFamily="@font/nyata"/>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/btnLogOut"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CERRAR SESIÓN"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border"
            android:fontFamily="@font/nyata"/>

        <View
            android:layout_marginTop="6dp"
            android:layout_width="320dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorTransparent" />



    </LinearLayout>

</androidx.cardview.widget.CardView>